   <plugin>
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>maven-surefire-plugin</artifactId>
  <version>3.2.5</version>
  <configuration>
    <!-- ensure Allure results directory -->
    <systemPropertyVariables>
      <allure.results.directory>${project.build.directory}/allure-results</allure.results.directory>
    </systemPropertyVariables>

    <!-- register the TestNG listener for Allure -->
    <properties>
      <property>
        <name>listener</name>
        <value>io.qameta.allure.testng.AllureTestNg</value>
      </property>
    </properties>

    <!-- optional: helps with classloading in some CI setups -->
    <forkCount>1</forkCount>
    <reuseForks>false</reuseForks>
  </configuration>
</plugin>

        <!-- Surefire plugin to run TestNG suites -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>3.1.2</version>

            <configuration>
                <!-- Default suite (optional) -->
                <suiteXmlFiles>
                    <suiteXmlFile>src/test/java/com/intelehealth/resources/testrunners/${suiteXmlFile}.xml</suiteXmlFile>
                </suiteXmlFiles>
            </configuration>
        </plugin>

